- content_for :info_panel do
  = render "info_panels/new_password"

%h3 Change your password

= errors_for @user if @user.errors.any?

= form_for @user, url: update_password_account_path(@user) do |f|
  .control-group
    = f.label :old_password, "Your old password:"
    = f.password_field :old_password
  .control-group
    = f.label :password, "A new password:"
    = f.password_field :password
  .control-group
    = f.label :password_confirmation, "Re-type your new password:"
    = f.password_field :password_confirmation
  .control-group
    .align-on-labels
    = f.submit "Change Login Info", class: "orange"
    = link_to "Cancel", root_path, class: "button blue"