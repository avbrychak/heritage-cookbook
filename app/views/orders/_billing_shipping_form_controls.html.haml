%h3 Billing information

.control-group
  = f.label :bill_first_name, "First name:"
  = f.text_field :bill_first_name
.control-group    
  = f.label :bill_last_name, "Last name:"
  = f.text_field :bill_last_name
.control-group
  = f.label :bill_country, "Country:"
  = f.select :bill_country, ['Canada', 'United States']
.control-group
  = f.label :bill_address, "Address:"
  = f.text_field :bill_address
.control-group
  .align-on-labels
  = f.text_field :bill_address2
.control-group
  = f.label :bill_city, "City:"
  = f.text_field :bill_city
.control-group
  = f.label :bill_state, "State/Province:"
  = f.select :bill_state, Order::states_reverse
.control-group
  = f.label :bill_zip, "Zip/Postal Code:"
  = f.text_field :bill_zip
.control-group
  = f.label :bill_phone, "Phone number:"
  = f.text_field :bill_phone

